{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "lint": {
      "outputs": []
    },
    "typescript": {
      "dependsOn": [],
      "outputs": []
    },
    "extract-translations": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "verify": {
      "outputs": []
    }
  }
}
